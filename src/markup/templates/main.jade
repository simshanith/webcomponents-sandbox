include ../helpers/mixins
//-
  # Main HTML Boilerplate
  http://www.paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/
  http://mathiasbynens.be/notes/safe-css-hacks

doctype html
!="\n"
html.no-js.no-app(lang="en_US")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    block title
      title Web Component Sandbox
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='HandheldFriendly', content='true')
    meta(name='MobileOptimized', content='width')
    meta(name='format-detection', content='telephone=no')
    block stylesheets
      +projectStyle('main.css')
    block favicons
      link(rel='shortcut icon', href='/favicon.ico')
      //- link(rel='apple-touch-icon', href='/apple-touch-icon.png')
    block viewport
      include ../includes/viewport
    block headScripts
      include ../includes/headScripts
  block config
    - pageId = pagevar(pageId) ? pageId : 'mainTemplate'
    - pagePath = pagevar(pagePath) ? pagePath : ''
  body(id=pageId, class=pageClasses)
    #wrapper
      block header
        include ../includes/header
      section#mainContent
        block mainContent
      block footer
        include ../includes/footer
    block endScripts
      include ../includes/endScripts
